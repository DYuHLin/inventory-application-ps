<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%=title %></title>
</head>
<body>
    <%- include('./head.ejs')  %>

    <section class="home">
        <a href="/allshoes/create" class="page-links">New Shoe</a>
        <%if(shoe.length > 0){%>
        <%shoe.forEach(element => {%>
            <div class="home-page">
                <div class="shoe-list">
                    <a href="/allshoes/single/<%=element.id%>" class="page-links"> <%=element.name %> </a>
                    <span class="info-shoe"> (<%= element.type_name%>,  </span>
                    <span class="info-shoe"> <%= element.brand_name%> )</span>
                    <p class="home-info"> Price: <%= element.price%> </p>
                    <span> Stock: <%= element.stock%> </span>       
                </div>
            </div>
       <%})%>
       <%}else{%>
            <p>There are no shoes</p>
        <%}%>
    </section>
</body>
</html>